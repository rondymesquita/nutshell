{
  "name": "@rondymesquita/nutshell",
  "version": "0.1.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/rondymesquita/nutshell.git"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/globals.js",
  "bin": {
    "ns": "./dist/bin.js",
    "nutshell": "./dist/bin.js"
  },
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": "./dist/globals.js",
    "./globals": "./dist/globals.js",
    "./core": "./dist/core.js"
  },
  "typesVersions": {
    "*": {
      "globals": [
        "./dist/globals.d.ts"
      ],
      "core": [
        "./dist/core.d.ts"
      ]
    }
  },
  "scripts": {
    "test": "jest",
    "test:watch": "npm run test -- --watchAll",
    "dev": "nodemon -w ./src ./src/index.ts",
    "dev:bin": "nodemon -w './src' --ext 'ts,js,json' --exec ts-node ./src/bin.ts ./src/example.js",
    "build": "rimraf ./dist && tsc && copyfiles ./example ./dist",
    "release": "release-it --ci"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chalk": "^4.1.0",
    "colorette": "^2.0.19",
    "fs-extra": "^10.1.0",
    "globby": "^13.1.2",
    "pino": "^8.4.1",
    "pino-abstract-transport": "^1.0.0",
    "pino-pretty": "^9.0.0",
    "winston": "^3.8.1",
    "yaml": "^2.1.1",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.2",
    "copyfiles": "^2.4.1",
    "jest": "^27.3.1",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "release-it": "^15.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "vitest": "^0.19.1"
  }
}
